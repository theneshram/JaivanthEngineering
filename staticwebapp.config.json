{
  "routes": [
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/assets/*",
      "headers": {
        "cache-control": "public, max-age=31536000"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": ["/api/*", "*.{css,gif,ico,jpg,js,png,txt,svg,webp,woff,woff2}"]
  },
  "mismatchedContentType": "redirect",
  "defaultErrorPage": "index.html",
  "trailingSlash": "auto"
}
